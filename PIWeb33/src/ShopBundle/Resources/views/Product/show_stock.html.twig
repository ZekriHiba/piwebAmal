{% extends "::LayoutAdmin.html.twig" %}

{% block titre %}ShowStock{% endblock %}

{% block contenu  %}
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>
    <hr>






        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">Stock</h3>
                        </div>



                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="example2" class="table table-bordered table-hover">

                                <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Prix</th>
                                    <th>Quantit√©</th>
                                    <th>Type</th>
                                    <th>Image</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for p in products %}
                                <tr>
                                    <td>{{ p.name }}</td>
                                    <td>{{ p.description }}</td>
                                    <td>{{ p.price }}</td>
                                    <td> {{ p.quantity }}</td>
                                    <td>{{ p.type }}</td>
                                    <td>{{ p.image }}</td>
                                    <td><a href="{{ path('_delete_product' ,{'id':p.idProduct}) }}" >Supprimer</a></td>
                                    {% endfor %}
                                </tr>
                                </tbody>


                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>











                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->




{% endblock %}
